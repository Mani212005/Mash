# Mash Voice Platform Environment Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Meta/WhatsApp Business API Credentials
# Get these from https://developers.facebook.com/
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_APP_SECRET=your_app_secret

# Deepgram API
DEEPGRAM_API_KEY=your_deepgram_api_key

# Google Gemini API (for LLM)
# Get your API key from https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# PostgreSQL Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mash_voice

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY=your-api-key-for-external-access

# Feature Flags
ENABLE_MESSAGE_LOGGING=true
ENABLE_AGENT_TRANSFER=true

# Customer Service Configuration
CS_DEFAULT_AGENT=customer_service_agent
CS_KNOWLEDGE_BASE_PATH=  # Leave empty for default, or specify custom path
CS_ESCALATION_ENABLED=true
CS_MAX_TURNS_BEFORE_ESCALATION=10
CS_SENTIMENT_DETECTION=true